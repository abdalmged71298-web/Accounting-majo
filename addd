<script>
  function toggleButtons(){
    const sub = document.getElementById("subButtons");
    sub.style.display = (sub.style.display === "none" || sub.style.display === "") ? "flex" : "none";
  }

  const whatsappNumbers = [
    {name: "م.عبدالمجيد المنيعي - مسؤول البوابة", number: "966538044789"},
    {name: "م.محمد منير - مشرف قروبات المحاسبة", number: "966545237384"}
  ];

  const whatsappGroups = [
    {name: "قروب طلاب المحاسبة", link: "https://chat.whatsapp.com/JetTf2RUhCsER6mqXpIde3"},
    {name: "قروب ادارة البوابة", link: "https://chat.whatsapp.com/JetTf2RUhCsER6mqXpIde3"}
  ];

  const emails = [
    {name: "إيميل رئيس القسم", email: "abdalmged7129@gmail.com"},
    {name: "إيميل الدعم", email: "abdalmged71298@gmail.com"}
  ];

  function showList(type){
    const popup = document.getElementById("listPopup");
    const title = document.getElementById("listTitle");
    const list = document.getElementById("listItems");
    list.innerHTML = "";

    let items = [];
    if(type === "whatsapp"){
      title.innerText = "اختر رقم واتساب:";
      items = whatsappNumbers.map(x => `<li><a href="https://wa.me/${x.number}" target="_blank" style="text-decoration:none; color:#000;">${x.name}</a></li>`);
    } else if(type === "groups"){
      title.innerText = "اختر قروب واتساب:";
      items = whatsappGroups.map(x => `<li><a href="${x.link}" target="_blank" style="text-decoration:none; color:#000;">${x.name}</a></li>`);
    } else if(type === "email"){
      title.innerText = "اختر بريد إلكتروني:";
      items = emails.map(x => `<li><a href="mailto:${x.email}" target="_blank" style="text-decoration:none; color:#000;">${x.name}</a></li>`);
    }

    list.innerHTML = items.join("");
    popup.style.display = "block";
  }

  function closeList(){
    document.getElementById("listPopup").style.display = "none";
  }
</script>
 

