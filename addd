/* === نهاية البيانات === */


/* === UI logic === */
const subjectsListEl = document.getElementById('subjects');
const subjectCard = document.getElementById('subjectCard');
const emptyCard = document.getElementById('emptyCard');
const subjectTitleEl = document.getElementById('subjectTitle');
const subTabsEl = document.getElementById('subTabs');
const tabAreaEl = document.getElementById('tabArea');

let currentMain = 'college';
let currentSubject = null;
let currentSubTab = null;

function updateMainButtons(mainKey){
  const mapping = {
    college:'tab-college',
    major:'tab-major',
    univ:'tab-univ',
    Optional:'tab-optional',
    Advertisement:'tab-ads'
  };
  for(const k in mapping){
    const btn = document.getElementById(mapping[k]);
    if(!btn) continue;
    btn.classList.toggle('inactive', k !== mainKey);
  }
}

function selectMain(key){
  currentMain = key;
  updateMainButtons(key);

  // special case: Advertisement -> show announcements directly (no subject list)
  if(key === 'Advertisement'){
    showAdvertisement();
    return;
  }

  renderSubjects(key);
  window.scrollTo({top:0,behavior:'smooth'});
}

function renderSubjects(mainKey){
  subjectsListEl.innerHTML = '';
  const arr = data[mainKey] || [];
  arr.forEach(item=>{
    const li = document.createElement('li');
    li.textContent = item.title;
    li.dataset.id = item.id;
    li.onclick = ()=>selectSubject(item.id);
    li.id = 'subject-'+item.id;
    subjectsListEl.appendChild(li);
  });
  // hide subject card, show empty instructions
  subjectCard.style.display='none';
  emptyCard.style.display='block';
}

function showAdvertisement(){
  // hide subjects list (clear) and show card with announcements directly
  subjectsListEl.innerHTML = '';
  subjectCard.style.display='block';
  emptyCard.style.display='none';
  subjectTitleEl.textContent = '📢 الإعلانات';
  subTabsEl.innerHTML = ''; // no sub-tabs for ads

  tabAreaEl.innerHTML = '';
  const h = document.createElement('h3'); h.textContent = 'إعلانات مهمة';
  tabAreaEl.appendChild(h);

  if(!data.AdvertisementAnnouncements || data.AdvertisementAnnouncements.length===0){
    const p = document.createElement('p'); p.className='hint'; p.textContent = 'لا توجد إعلانات حاليا.';
    tabAreaEl.appendChild(p);
    return;
  }

  const ul = document.createElement('ul');
  data.AdvertisementAnnouncements.forEach(it=>{
    const li = document.createElement('li');
    if(it.url){
      const a = document.createElement('a'); a.href = it.url; a.target='_blank'; a.rel='noopener'; a.className='link'; a.textContent = it.label;
      li.appendChild(a);
    } else {
      const span = document.createElement('div'); span.textContent = it.label; span.style.color='var(--muted)'; li.appendChild(span);
    }
    ul.appendChild(li);
  });
  tabAreaEl.appendChild(ul);
}

function findSubjectById(id){
  const arr = data[currentMain] || [];
  return arr.find(s=>s.id===id);
}

function selectSubject(id){
  currentSubject = findSubjectById(id);
  if(!currentSubject) return;
  document.querySelectorAll('.subject-list li').forEach(li=>li.classList.remove('active'));
  const liEl = document.getElementById('subject-'+id); if(liEl) liEl.classList.add('active');

  subjectCard.style.display='block';
  emptyCard.style.display='none';
  subjectTitleEl.textContent = currentSubject.title;

  renderSubTabs();
  openSubTab('videos'); // default
  subjectCard.scrollIntoView({behavior:'smooth'});
}

function showSubjects(){
  currentSubject = null;
  document.querySelectorAll('.subject-list li').forEach(li=>li.classList.remove('active'));
  subjectCard.style.display='none';
  emptyCard.style.display='block';
}

function renderSubTabs(){
  subTabsEl.innerHTML = '';
  const tabs = [
    {key:'videos', label:'🎥 فيديوهات'},
    {key:'books', label:'📑 كتب'},
    {key:'models', label:'📂 نماذج'},
    {key:'summaries', label:'📝 ملخصات'},
    {key:'Telegram', label:'📌 تليجرام'},
    {key:'news', label:'📢 إعلانات'}
  ];
  tabs.forEach(t=>{
    const btn = document.createElement('button');
    btn.textContent = t.label;
    btn.onclick = ()=>openSubTab(t.key);
    btn.id = 'subbtn-'+t.key;
    subTabsEl.appendChild(btn);
  });
}

function openSubTab(tabKey){
  currentSubTab = tabKey;
  document.querySelectorAll('.sub-tabs button').forEach(b=>b.classList.remove('active'));
  const btn = document.getElementById('subbtn-'+tabKey); if(btn) btn.classList.add('active');

  tabAreaEl.innerHTML = '';
  if(!currentSubject){
    tabAreaEl.innerHTML = '<p class="hint">اختر مادة لعرض المحتوى.</p>';
    return;
  }

  const items = currentSubject[tabKey] || [];
  const titleMap = { videos:'قائمة الفيديوهات', books:'الكتب (PDF/ملفات)', models:'نماذج / ملفات', summaries:'الملخصات', Telegram:'قنوات تليجرام', news:'الإعلانات' };
  const h = document.createElement('h3'); h.textContent = titleMap[tabKey] || 'المحتوى'; tabAreaEl.appendChild(h);

  if(items.length===0){
    const p = document.createElement('p'); p.className='hint'; p.textContent = 'لا يوجد محتوى هنا بعد. .';
    tabAreaEl.appendChild(p); return;
  }

  const ul = document.createElement('ul');
  items.forEach(it=>{
    const li = document.createElement('li');
    if(it.url){
      const a = document.createElement('a'); a.href = it.url; a.target='_blank'; a.rel='noopener'; a.className='link'; a.textContent = it.label || it.url;
      li.appendChild(a);
    } else {
      const span = document.createElement('div'); span.textContent = it.label || ''; span.style.color='var(--muted)';
      li.appendChild(span);
    }
    if(it.desc){
      const d = document.createElement('div'); d.style.marginTop='6px'; d.style.color='var(--muted)'; d.textContent = it.desc; li.appendChild(d);
    }
    ul.appendChild(li);
  });
  tabAreaEl.appendChild(ul);
}

/* انطلق */
selectMain('college');
</script>
</body>
</html>

